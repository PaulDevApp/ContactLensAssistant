<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MySplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorPrimaryDarkDay</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.ContactLensManagement</item>
    </style>

    <style name="Theme.ContactLensManagement" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDay</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDay</item>
        <item name="android:windowBackground">@color/colorBackgroundDay</item>
        <item name="colorSurface">@color/colorSurfaceDay</item>
        <item name="colorSecondary">@color/colorAccentDay</item>
        <item name="android:navigationBarColor">@color/colorSurfaceDay</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="TextItem" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">17sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>