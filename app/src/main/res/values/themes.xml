<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ContactLensManagement" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDay</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDay</item>
        <item name="android:windowBackground">@color/colorBackgroundDay</item>
        <item name="colorSurface">@color/colorSurfaceDay</item>
        <item name="colorSecondary">@color/colorAccentDay</item>
        <item name="android:navigationBarColor">@color/colorSurfaceDay</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="TextItem" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:textSize">17sp</item>
        <item name="android:padding">4dp</item>
        <item name="fontFamily">@font/notosans_regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TextToolbarTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/notosans_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextTitleInfo" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="fontFamily">@font/notosans_regular</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextTitleInfoDesc" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="fontFamily">@font/notosans_italic</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>


</resources>