<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="lensItem"
            type="com.appsforlife.contactlensmanagement.domain.entities.LensItem" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/extraColor"
        android:elevation="2dp"
        app:cardCornerRadius="12dp"
        app:cardUseCompatPadding="true">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_day_of_mark"
            style="@style/TextItem"
            android:gravity="center"
            android:text="@{lensItem.date}"
            tools:text="26 окт. 2021 г. 1:03:43" />

    </com.google.android.material.card.MaterialCardView>
</layout>